<div class="mx-auto md:w-2/3 w-full max-w-2xl">
  <div class="bg-white shadow-md rounded-lg p-6">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-lg" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <div class="mt-6 flex flex-wrap gap-3">
      <%= link_to "Edit this post", edit_post_path(@post), class: "rounded-lg py-2 px-4 bg-blue-100 text-blue-700 font-medium hover:bg-blue-200 transition-colors duration-300" %>
      <%= link_to "Back to posts", posts_path, class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition-colors duration-300" %>
      <%= button_to "Delete this post", @post, method: :delete, class: "rounded-lg py-2 px-4 bg-red-100 text-red-700 font-medium hover:bg-red-200 transition-colors duration-300", form: { data: { turbo_confirm: "Are you sure you want to delete this post?" } } %>
    </div>
  </div>
</div>